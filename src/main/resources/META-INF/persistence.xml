<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <!-- Define persistence unit -->
    <persistence-unit name="sk.longi.restApp" transaction-type="RESOURCE_LOCAL">

        <class>sk.longi.proxy.proxyparser.entity.IpHost</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>


        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/mysql-rest" />
            <property name="javax.persistence.jdbc.user" value="longi" />
            <property name="javax.persistence.jdbc.password" value="password" />

<!--            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />-->
            <property name="hibernate.show_sql" value="true" />
                        <property name="hibernate.hbm2ddl.auto" value="create" />
<!--                        <property name="hibernate.hbm2ddl.auto" value="update" /> &lt;!&ndash; create / create-drop / update &ndash;&gt;-->


            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>

        </properties>

    </persistence-unit>
</persistence>